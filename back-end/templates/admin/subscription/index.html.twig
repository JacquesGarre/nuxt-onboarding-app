{% extends 'admin/index.html.twig' %}

{% block title %}Subscriptions{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Subscriptions <a class="btn btn-primary float-end" href="{{ path('app_subscription_new') }}">Create new</a></h5>
    <div class="table-responsive">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Status</th>
                    <th>User</th>
                    <th>Pack</th>
                    <th>StartsAt</th>
                    <th>EndsAt</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>Price</th>
                    <th>Credited</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for subscription in subscriptions %}
                    <tr>
                        <td>{{ subscription.id }}</td>
                        <td>{{ subscription.status }}</td>
                        <td>{{ subscription.user }}</td>
                        <td>{{ subscription.pack }}</td>
                        <td>{{ subscription.startsAt ? subscription.startsAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ subscription.endsAt ? subscription.endsAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ subscription.createdAt ? subscription.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ subscription.updatedAt ? subscription.updatedAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ subscription.price }}</td>
                        <td>{{ subscription.credited }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_subscription_edit', {'id': subscription.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No subscriptions found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}

