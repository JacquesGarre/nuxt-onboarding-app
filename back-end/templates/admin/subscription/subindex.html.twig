<div class="card">
    <h5 class="card-header">My subscriptions</h5>
    <div>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Status</th>
                    <th>Pack</th>
                    <th>StartsAt</th>
                    <th>EndsAt</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            {% for subscription in user_subscriptions %}
                    <tr>
                        <td>{{ subscription.status }}</td>
                        <td>{{ subscription.pack }}</td>
                        <td>{{ subscription.startsAt ? subscription.startsAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ subscription.endsAt ? subscription.endsAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ subscription.createdAt ? subscription.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ subscription.updatedAt ? subscription.updatedAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ subscription.price }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">No subscriptions found</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>
