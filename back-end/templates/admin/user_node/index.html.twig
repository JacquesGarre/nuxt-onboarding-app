<div class="card">
    <h5 class="card-header">Nodes <a class="btn btn-primary float-end" href="{{ path('app_user_node_new', {'userID': user.id }) }}">Create new</a></h5>
    <div>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Created At</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for user_node in user_nodes %}
                    <tr>
                        <td>{{ user_node.id }}</td>
                        <td>{{ user_node.latitude }}</td>
                        <td>{{ user_node.longitude }}</td>
                        <td>{{ user_node.createdAt ? user_node.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_user_node_edit', {'id': user_node.id, 'userID': user.id }) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No nodes found</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>
