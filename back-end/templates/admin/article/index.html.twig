{% extends 'admin/index.html.twig' %}

{% block title %}Articles{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Articles <a class="btn btn-primary float-end" href="{{ path('app_article_new') }}">Create new</a></h5>
    <div>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for article in articles %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.title }}</td>
                        <td>{{ article.status }}</td>
                        <td>{{ article.createdAt ? article.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ article.updatedAt ? article.updatedAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ article.author | raw }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_article_edit', {'id': article.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No articles found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}

