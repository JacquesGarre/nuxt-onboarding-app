{% extends 'admin/index.html.twig' %}

{% block title %}Users{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Users <a class="btn btn-primary float-end" href="{{ path('app_user_new') }}">Create new</a></h5>
    <div>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th></th>
                    <th>Email</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Roles</th>
                    <th>Is verified</th>
                    <th>Created at</th>
                    <th>Updated at</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            {% for user in users %}
                    <tr>   
                        <td>
                            <div class="avatar avatar-xs me-2">
                            <img
                            src="https://api.dicebear.com/5.x/avataaars/svg?seed={{ user.firstName }}"
                            alt="avatar"
                            class="rounded-circle"
                            />
                            </div>
                        </td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                        <td>{{ user.isVerified }}</td>
                        <td>{{ user.createdAt|date('d/m/y H:i') }}</td>
                        <td>{{ user.updatedAt|date('d/m/y H:i') }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_user_show', {'id': user.id}) }}"><i class="bx bx-chevron-right me-1"></i> Show</a>
                                    <a class="dropdown-item" href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">No users found</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>

{% endblock %}