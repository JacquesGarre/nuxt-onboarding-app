{% extends 'admin/index.html.twig' %}

{% block title %}Regions {% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Regions <a class="btn btn-primary float-end" href="{{ path('app_region_new') }}">Create new</a></h5>
    <div class="table-responsive">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Country</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for region in regions %}
                    <tr>
                        <td>{{ region.id }}</td>
                        <td>{{ region.country }}</td>
                        <td>{{ region.name }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_region_edit', {'id': region.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No regions found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}

