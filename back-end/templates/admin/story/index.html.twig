{% extends 'admin/index.html.twig' %}

{% block title %}Stories{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Stories <a class="btn btn-primary float-end" href="{{ path('app_story_new') }}">Create new</a></h5>
    <div>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Categories</th>
                    <th>Description</th>
                    <th>Experience Award</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Status</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            {% for story in stories %}
                    <tr>
                        <td>{{ story.id }}</td>
                        <td>{{ story.title }}</td>
                        <td>{{ story.categories|join(', ') }}</td>
                        <td>{{ story.description }}</td>
                        <td>{{ story.experienceAward }}</td>
                        <td>{{ story.createdAt ? story.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ story.updatedAt ? story.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ story.status }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_story_edit', {'id': story.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">No stories found</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>

{% endblock %}

