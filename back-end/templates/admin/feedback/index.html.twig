{% extends 'admin/index.html.twig' %}

{% block title %}Feedbacks{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Feedbacks <a class="btn btn-primary float-end" href="{{ path('app_feedback_new') }}">Create new</a></h5>
    <div class="table-responsive">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Created At</th>
                    <th>Author</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for feedback in feedbacks %}
                    <tr>
                        <td>{{ feedback.id }}</td>
                        <td>{{ feedback.type }}</td>
                        <td>{{ feedback.description }}</td>
                        <td>{{ feedback.createdAt ? feedback.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ feedback.author | raw }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_feedback_edit', {'id': feedback.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No feedbacks found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}

