{% extends 'admin/index.html.twig' %}

{% block title %}Ranks{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Ranks <a class="btn btn-primary float-end" href="{{ path('app_rank_new') }}">Create new</a></h5>
    <div>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Experience</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            {% for rank in ranks %}
                    <tr>
                        <td>{{ rank.id }}</td>
                        <td>{{ rank.name }}</td>
                        <td>{{ rank.experience }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_rank_edit', {'id': rank.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No ranks found</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>

{% endblock %}
