{% extends 'admin/index.html.twig' %}

{% block title %}Tokens{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Tokens <a class="btn btn-primary float-end" href="{{ path('app_api_token_new') }}">Create new</a></h5>
    <div>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Token</th>
                    <th>Active</th>
                    <th>Created at</th>
                    <th>Updated at</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for api_token in api_tokens %}
                <tr>
                    <td>{{ api_token.id }}</td>
                    <td>{{ api_token.name }}</td>
                    <td>{{ api_token.token }}</td>
                    <td>{{ api_token.active ? 'Yes' : 'No' }}</td>
                    <td>{{ api_token.createdAt|date('d/m/y H:i') }}</td>
                    <td>{{ api_token.updatedAt|date('d/m/y H:i') }}</td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('app_api_token_edit', {'id': api_token.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                            </div>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6">No tokens found</td>
                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>
{% endblock %}