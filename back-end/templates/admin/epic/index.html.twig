{% extends 'admin/index.html.twig' %}

{% block title %}Epics{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Epics <a class="btn btn-primary float-end" href="{{ path('app_epic_new') }}">Create new</a></h5>
    <div class="table-responsive">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Categories</th>
                    <th>Description</th>
                    <th>Experience Award</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Status</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for epic in epics %}
                    <tr>
                        <td>{{ epic.id }}</td>
                        <td>{{ epic.title }}</td>
                        <td>{{ epic.categories|join(', ') }}</td>
                        <td>{{ epic.description }}</td>
                        <td>{{ epic.experienceAward }}</td>
                        <td>{{ epic.createdAt ? epic.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ epic.updatedAt ? epic.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ epic.status }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_epic_edit', {'id': epic.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No epics found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
