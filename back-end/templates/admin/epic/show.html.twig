{% extends 'base.html.twig' %}

{% block title %}Epic{% endblock %}

{% block body %}
    <h1>Epic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ epic.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ epic.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ epic.description }}</td>
            </tr>
            <tr>
                <th>ExperienceAward</th>
                <td>{{ epic.experienceAward }}</td>
            </tr>
            <tr>
