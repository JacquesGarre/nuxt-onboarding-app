            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ epic.updatedAt ? epic.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ epic.status }}</td>
            </tr>
