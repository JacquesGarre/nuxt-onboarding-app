{% extends 'admin/index.html.twig' %}

{% block title %}Achievements{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Achievements <a class="btn btn-primary float-end" href="{{ path('app_achievement_new') }}">Create new</a></h5>
    <div class="table-responsive">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Categories</th>
                    <th>Triggered On</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Author</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for achievement in achievements %}
                    <tr>
                    <td>{{ achievement.id }}</td>
                    <td>{{ achievement.name }}</td>
                    <td>{{ achievement.description }}</td>
                    <td>{{ achievement.categories|join(', ') }}</td>
                    <td>{{ achievement.triggerOn }}</td>
                    <td>{{ achievement.status }}</td>
                    <td>{{ achievement.createdAt ? achievement.createdAt|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ achievement.updatedAt ? achievement.updatedAt|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ achievement.author | raw }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_achievement_edit', {'id': achievement.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No achievements found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}


