{% extends 'base.html.twig' %}

{% block title %}Achievement{% endblock %}

{% block body %}
    <h1>Achievement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ achievement.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ achievement.name }}</td>
            </tr>
            <tr>
                <th>TriggerOn</th>
                <td>{{ achievement.triggerOn }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ achievement.experience }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ achievement.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ achievement.latitude }}</td>
            </tr>
            <tr>
                <th>Radius</th>
                <td>{{ achievement.radius }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ achievement.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ achievement.createdAt ? achievement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ achievement.updatedAt ? achievement.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_achievement_index') }}">back to list</a>

    <a href="{{ path('app_achievement_edit', {'id': achievement.id}) }}">edit</a>

    {{ include('achievement/_delete_form.html.twig') }}
{% endblock %}
