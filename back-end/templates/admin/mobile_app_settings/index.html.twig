{% extends 'admin/index.html.twig' %}

{% block title %}Settings{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">Settings <a class="btn btn-primary float-end" href="{{ path('app_mobile_app_settings_new') }}">Create new</a></h5>
    <div>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Label</th>
                    <th>Value</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            {% for mobile_app_setting in mobile_app_settings %}
                    <tr>
                        <td>{{ mobile_app_setting.label }}</td>
                        <td>{{ mobile_app_setting.value }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_mobile_app_settings_edit', {'id': mobile_app_setting.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No settings found</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>

{% endblock %}
